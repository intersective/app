{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "ES2022",
    "moduleResolution": "node",
    "importHelpers": true,
    "useDefineForClassFields": false,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "ES2022",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "@testingv3/*": [
        "projects/v3/src/testing/*"
      ],
      "@v3/app/*": [
        "projects/v3/src/app/*"
      ],
      "@v3/services/*": [
        "projects/v3/src/app/services/*"
      ],
      "@v3/components/*": [
        "projects/v3/src/app/components/*"
      ],
      "@v3/pages/*": [
        "projects/v3/src/app/pages/*"
      ],
      "@v3/environments/*": [
        "projects/v3/src/environments/*"
      ],
      "request": [
        "./dist/request/request",
        "./dist/request"
      ]
    }
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true,
    "disableTypeScriptVersionCheck": true
  }
}
