{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom",
      "esnext.asynciterable"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@services/*": ["app/services/*"],
      "@components/*": ["app/shared/components/*"],
      "@shared/*": ["app/shared/*"],
      "@environments/*": ["environments/*"],
      "@testing/*": ["testing/*"]
    }
  }
}
