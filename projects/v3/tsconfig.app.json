/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../out-tsc/app",
    "types": [],
    "lib": [
      "es2020",
      "dom"
    ],
    "paths": {
      "@testingv3/*": [
        "./src/testing/*"
      ],
      "@v3/app/*": [
        "./src/app/*"
      ],
      "@v3/services/*": [
        "./src/app/services/*"
      ],
      "@v3/components/*": [
        "./src/app/components/*"
      ],
      "@v3/pages/*": [
        "./src/app/pages/*"
      ],
      "@v3/environments/*": [
        "./src/environments/*"
      ],
      "apollo": [
        "../../dist/apollo"
      ],
      "request": [
        "../../dist/request"
      ]
    },
  },
  "files": [
    "./src/main.ts",
    "./src/polyfills.ts",
    "./src/zone-flags.ts"
  ],
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "test.ts",
    "**/testing/**/*.ts",
    "**/*.spec.ts",
    "../../node_modules",
    "../../dist",
    "../../src/**/*.*"
  ]
}
